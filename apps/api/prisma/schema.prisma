// Prisma schema for gestao_financeira

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WalletRole {
  ADMIN
  EDITOR
  VIEWER
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum AccessStatus {
  ALLOWED
  REVOKED
}

enum DebtStatus {
  ACTIVE
  PAID
  CANCELED
}

enum SyncEventType {
  TRANSACTION_CREATED
  TRANSACTION_UPDATED
  TRANSACTION_DELETED
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  passwordHash String         @map("password_hash")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  wallets        WalletMember[]
  createdWallets Wallet[]     @relation("CreatedWallets")
  refreshTokens RefreshToken[]
  syncEvents   SyncEvent[]
}

model Wallet {
  id          String         @id @default(uuid())
  name        String
  createdById String         @map("created_by_id")
  createdBy   User           @relation("CreatedWallets", fields: [createdById], references: [id])
  serverSeq   Int            @default(0) @map("server_seq")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  members     WalletMember[]
  accounts    Account[]
  categories  Category[]
  transactions Transaction[]
  debts       Debt[]
  syncEvents  SyncEvent[]
}

model WalletMember {
  id        String     @id @default(uuid())
  walletId  String     @map("wallet_id")
  userId    String     @map("user_id")
  role      WalletRole
  createdAt DateTime   @default(now()) @map("created_at")

  wallet    Wallet     @relation(fields: [walletId], references: [id])
  user      User       @relation(fields: [userId], references: [id])

  @@unique([walletId, userId])
}

model Account {
  id        String    @id @default(uuid())
  walletId  String    @map("wallet_id")
  name      String
  type      String?   @map("type")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  wallet    Wallet    @relation(fields: [walletId], references: [id])
  transactions Transaction[] @relation("AccountTransactions")
  counterpartyTransactions Transaction[] @relation("CounterpartyTransactions")
}

model Category {
  id        String    @id @default(uuid())
  walletId  String    @map("wallet_id")
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  wallet    Wallet    @relation(fields: [walletId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id                     String          @id
  walletId               String          @map("wallet_id")
  accountId              String          @map("account_id")
  type                   TransactionType
  amountCents            Int             @map("amount_cents")
  occurredAt             DateTime        @map("occurred_at")
  description            String
  categoryId             String?         @map("category_id")
  counterpartyAccountId  String?         @map("counterparty_account_id")
  deletedAt              DateTime?       @map("deleted_at")
  createdAt              DateTime        @default(now()) @map("created_at")
  updatedAt              DateTime        @updatedAt @map("updated_at")

  wallet                 Wallet          @relation(fields: [walletId], references: [id])
  account                Account         @relation("AccountTransactions", fields: [accountId], references: [id])
  category               Category?       @relation(fields: [categoryId], references: [id])
  counterpartyAccount    Account?        @relation("CounterpartyTransactions", fields: [counterpartyAccountId], references: [id])
}

model SyncEvent {
  eventId          String        @id @map("event_id")
  walletId         String        @map("wallet_id")
  userId           String        @map("user_id")
  deviceId         String        @map("device_id")
  eventType        SyncEventType @map("event_type")
  payload          Json
  serverSeq        Int           @map("server_seq")
  serverReceivedAt DateTime      @default(now()) @map("server_received_at")

  wallet           Wallet        @relation(fields: [walletId], references: [id])
  user             User          @relation(fields: [userId], references: [id])

  @@index([walletId, serverSeq])
  @@index([walletId, serverReceivedAt])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  tokenHash String   @map("token_hash")
  deviceId  String   @map("device_id")
  revokedAt DateTime? @map("revoked_at")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, deviceId])
}

model AccessGrant {
  email     String        @id
  status    AccessStatus  @default(ALLOWED)
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
}

model Debt {
  id                   String     @id @default(uuid())
  walletId             String     @map("wallet_id")
  name                 String
  principalCents       Int        @map("principal_cents")
  interestRate         Float?     @map("interest_rate")
  monthlyPaymentCents  Int?       @map("monthly_payment_cents")
  startedAt            DateTime   @map("started_at")
  dueAt                DateTime?  @map("due_at")
  status               DebtStatus @default(ACTIVE)
  createdAt            DateTime   @default(now()) @map("created_at")
  updatedAt            DateTime   @updatedAt @map("updated_at")

  wallet               Wallet     @relation(fields: [walletId], references: [id])

  @@index([walletId])
}
